<div id="nav">
  <ul>
  <%= Enum.map(@items, fn item ->
    url = if item.type == :index do
      "#{@href_prefix}#{item.filename}"
    else
      "#{@href_prefix}#{item.type}/#{item.filename}"
    end
    """
    <li><a href="#{url}">#{item.markdown.front_matter.title}</a></li>
    """
  end) %>
  </ul>
</div>
